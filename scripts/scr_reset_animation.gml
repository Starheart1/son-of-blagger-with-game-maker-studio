// Synchronize the image index of the animated objects
// It doesn't work always correctly with the 'parent' object, so do it for every child 
with(ladder)
{
    image_index = ladder.image_index;
}

with(ladder_left)
{
    image_index = ladder_left.image_index;
}

with(ladder_right)
{
    image_index = ladder_right.image_index;
}

with(vanishing_platform)
{
    image_index = vanishing_platform.image_index;
}

with(vanishing_platform_double)
{
    image_index = vanishing_platform.image_index;
}

with(conveyor_left)
{
    image_index = conveyor_left.image_index;
}

with(conveyor_right)
{
    image_index = conveyor_right.image_index;
}

with(conveyor_left_double)
{
    image_index = conveyor_left_double.image_index;
}

with(conveyor_right_double)
{
    image_index = conveyor_right_double.image_index;
}

with(wave)
{
    image_index = wave.image_index;
}

with(wave_left)
{
    image_index = wave_left.image_index;
}

with(wave_right)
{
    image_index = wave_right.image_index;
}